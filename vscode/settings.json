{
  // general editor settings
  "terminal.external.osxExec": "iTerm.app",
  "workbench.colorTheme": "Material Theme",
  "workbench.iconTheme": "eq-material-theme-icons",
  "workbench.sideBar.location": "left",
  "vsicons.projectDetection.autoReload": true,
  "vsicons.dontShowNewVersionMessage": true,
  "editor.lineNumbers": "on",
  "editor.fontSize": 12,
  "editor.rulers": [90, 120],
  "editor.minimap.enabled": true,
  "window.zoomLevel": 0,
  "window.nativeTabs": true,
  "editor.renderWhitespace": "boundary",
  // languages
  "[python]": {
    "editor.tabSize": 4
  },
  "[c]": {
    "editor.tabSize": 4
  },
  "[cpp]": {
    "editor.tabSize": 4
  },
  "[dockerfile]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[javascript]": {
    "editor.tabSize": 2
  },
  "[javascriptreact]": {
    "editor.tabSize": 2
  },
  "[typescriptreact]": {
    "editor.tabSize": 2
  },
  "[vue]": {
    "editor.tabSize": 2
  },
  "[latex]": {
    "editor.tabSize": 4
  },
  "[shellscript]": {},
  "[makefile]": {},
  "[markdown]": {
    "editor.tabSize": 4
  },
  // linting style, provider: pylint, pep8, flake8, mypy, pylama
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.maxNumberOfProblems": 50,
  "python.linting.pylintArgs": ["--errors-only"],
  "python.linting.pep8Enabled": false,
  "python.linting.flake8Enabled": false,
  "python.linting.mypyEnabled": false,
  "python.linting.pylamaEnabled": false,
  // virtual env
  "python.venvPath": "venv/bin/python",
  // auto-formatting, provider: autopep8 or yapf, install use pip
  "python.formatting.formatOnSave": true,
  // auto-complete
  "python.autoComplete.extraPaths": [],
  // jupyter settings
  "python.jupyter.defaultKernel": "Python 3",
  "python.jupyter.startupCode": ["%matplotlib inline"],
  "python.jupyter.appendResults": true,
  "jupyter.appendResults": true,
  "jupyter.notebook.startupArgs": [
    "--no-browser",
    "--port=8888",
    "--NotebookApp.allow_origin=\"*\""
  ],
  // pandoc
  "pandoc.pdfOptString": "--latex-engine=xelatex --listings",
  // "files.autoSave": "afterDelay",
  // // "workbench.colorTheme": "One Dark Pro Vivid",
  "workbench.colorCustomizations": {
    "tab.activeBackground": "#282c34",
    "activityBar.background": "#282c34",
    "sideBar.background": "#282c34"
  },
  // "explorer.confirmDelete": false,
  "files.associations": {
    "*.sh": "shellscript"
  },
  "editor.fontFamily": "Fira Code, Source Code Pro for Powerline, Menlo, Monaco, 'Courier New', monospace",
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "editor.formatOnSave": true,
  "editor.fontLigatures": true,
  "editor.lineHeight": 24,
  "editor.tabCompletion": "on",
  "go.useLanguageServer": true,
  "[go]": {
    // "editor.snippetSuggestions": "none",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "gopls": {
    // Add parameter placeholders when completing a function.
    "usePlaceholders": true,
    // If true, enable additional analyses with staticcheck.
    // Warning: This will significantly increase memory usage.
    "staticcheck": false
  },
  "go.languageServerExperimentalFeatures": {
    "format": true,
    "autoComplete": true,
    "rename": true,
    "goToDefinition": true,
    "hover": true,
    "signatureHelp": true,
    "goToTypeDefinition": true,
    "goToImplementation": true,
    "documentSymbols": true,
    "workspaceSymbols": true,
    "findReferences": true,
    "diagnostics": true,
    "documentLink": true,
    "highlight": true
  },
  // "go.languageServerFlags": [
  //     "-rpc.trace", // for more detailed debug logging
  //     "serve",
  //     "-format-style=goimports",
  //     "--debug=localhost:6060", // to investigate memory usage, see profiles
  // ],
  "files.eol": "\n", // formatting only supports LF line endings
  // "go.goroot": "/usr/local/go",
  // "go.gopath": "~/go",
  "go.formatTool": "goimports",
  "go.testFlags": ["-v", "-count=1"],
  "go.lintTool": "golangci-lint",
  "go.lintFlags": ["--fast", "--disable=varcheck"],
  // "gopls": {
  //     "usePlaceholders": true, // add parameter placeholders when completing a function
  //     "enhancedHover": true, // experimental to improve quality of hover (will be on by default soon)
  // },
  "docker.images.groupBy": "Registry",
  "editor.suggestSelection": "first",
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  // "workbench.colorTheme": "One Dark Pro",
  "gitlens.views.repositories.location": "gitlens",
  "gitlens.views.fileHistory.location": "gitlens",
  "gitlens.views.lineHistory.location": "gitlens",
  "gitlens.views.compare.location": "gitlens",
  "gitlens.views.search.location": "gitlens",
  "gitlens.advanced.messages": {
    "suppressSupportGitLensNotification": true
  },
  "explorer.confirmDragAndDrop": false,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
